<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
  </head>
  <body>
    <h1>The Dojo Message Board</h1>
    <hr>
    <form action="/message" method="post">
      <p>Name:</p>
      <p><input type="text" name="name"></p>
      <p>Message:</p>
      <textarea name="content" rows="8" cols="80"></textarea>
      <p><input type="submit" value="Post message"></p>
    </form>
    <hr>
    <div id="messageBoard">
      <% for (var m = 0; m < messages.length; m++) { %>
      <h3>Name: <%= messages[m].name %> </h3>
      <h3>Message: <%= messages[m].content %></h3>
        <% for (var c = 0; c < messages[m].comments.length; c ++) { %>
          <p>Name: <%= messages[m].comments[c].name %></p>
          <p>Comment: <%= messages[m].comments[c].content %></p>
        <% } %>
      <form action="/comment/<%= messages[m]._id%>" method="post">
        <p>Name:</p>
        <p><input type="text" name="name"></p>
        <p>Comment:</p>
        <p><input type="text" name="content"></p>
        <p><input type="submit" value="Post Comment"></p>
      </form>
      <hr>
      <% } %>

    </div>
  </body>
</html>
